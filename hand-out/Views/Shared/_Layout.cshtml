<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <title>
        Hand-Out
    </title>

    <!-- jQuery Libraries -->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <!-- jQuery UI -->
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <link href="~/lib/jqueryui/jquery-ui.min.css" rel="stylesheet" />
    <!-- Fonts and icons -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="../assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="../assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link href="../assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link id="pagestyle" href="../assets/css/soft-ui-dashboard.css?v=1.0.3" rel="stylesheet" />
    <!-- Custom CSS Files -->
    <link href="~/side-css/side-style-sheet.css" rel="stylesheet" />
    <!-- Bootstrap Icons-->
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />

    <script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>


</head>

<body class="">
    <div class="container position-sticky z-index-sticky top-0">
        <div class="row">
            <div class="col-12">
                <!-- Navbar -->
                <nav class="navbar navbar-expand-lg blur blur-rounded top-0 z-index-3 shadow position-absolute mt-3 mb-5 py-2 start-0 end-0 mx-4">
                    <div class="container-fluid">
                        <a asp-controller="Home" asp-action="Index" class="navbar-brand font-weight-bolder ms-lg-0 ms-3 ">
                            Hand-Out
                        </a>
                        <button class="navbar-toggler shadow-none ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon mt-2">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </span>
                        </button>
                        <div class="collapse navbar-collapse" id="navigation">
                            <ul class="navbar-nav mx-auto">
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Index" class="nav-link d-flex align-items-center me-2 active" aria-current="page">
                                        <i class="bi bi-house opacity-6 text-dark me-1"></i>
                                        Home
                                    </a>
                                </li>
                                @{
                                    if (User.Identity.IsAuthenticated)
                                    {
                                        <li class="nav-item">
                                            <a asp-controller="User" asp-action="Details" asp-route-id="" class="nav-link me-2">
                                                <i class="bi bi-person opacity-6 text-dark me-1"></i>
                                                Profile
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Message" asp-action="Index" class="nav-link">
                                                <i class="bi bi-envelope opacity-6 text-dark me-1"></i>
                                                Messages
                                            </a>
                                        </li>
                                        if (User.IsInRole("Admin"))
                                        {
                                            <li class="nav-item">
                                                <a asp-controller="User" asp-action="Index" asp-area="AdminPanel" class="nav-link me-2">
                                                    <i class="bi bi-person-heart opacity-6 text-dark me-1"></i>
                                                    Admin Dashboard
                                                </a>
                                            </li>
                                        }
                                        <li class="nav-item">
                                            <a asp-controller="User" asp-action="SignOut" class="nav-link me-2">
                                                <i class="bi bi-box-arrow-in-right opacity-6 text-dark me-1"></i>
                                                Sign Out
                                            </a>
                                        </li>
                                    }
                                }
                                @{
                                    else
                                    {
                                        <li class="nav-item">
                                            <a asp-controller="User" asp-action="SignUp" class="nav-link me-2">
                                                <i class="bi bi-person-plus opacity-6 text-dark me-1"></i>
                                                Sign Up
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="User" asp-action="SignIn" class="nav-link">
                                                <i class="bi bi-box-arrow-in-right  opacity-6 text-dark me-1"></i>
                                                Sign In
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
                <!-- End Navbar -->
            </div>
        </div>
    </div>
    @RenderBody()


    <!-- -------- START FOOTER 3 w/ COMPANY DESCRIPTION WITH LINKS & SOCIAL ICONS & COPYRIGHT ------- -->
    @{ if (!ViewData["Title"].Equals("Message/Index") && !ViewData["Title"].Equals("Product/Edit"))
