@model IndexViewModel

@{
    ViewData["Title"] = "Home/Index";
}

<div class="container-fluid">
    <div class="container pt-8">
        <!-- Categoryies -->
        <div id="categories-scrollbar" class="py-4">
            <div class="d-flex justify-content-start text-center">
                @foreach (ListCategoryViewModel category in @Model.ListCategoryViewModels)
                {
                    <div class="card-category mx-2 mx-md-3">
                        <a class="card-link text-white" asp-action="Index" asp-route-id="@category.Id">
                            <div class="category-card rounded-3 shadow anim-grow bg-gradient-dark">
                                <span class="fa @category.FontAwesomeIconName fa-2x"></span>
                                <span class="category-card-title">@category.Name</span>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
        <!-- Categories End -->
        <!------------------------------------------------------------>
        <!-- Products -->
        <div class="col-12 mt-2">
            <div class="mb-4">
                <div class="card-body p-3 pt-0">
                    <div class="row">
                        @foreach (var product in Model.ListProductViewModels)
                        {
                            <div class="col-xl-4 col-md-6 mb-xl-0 my-4">
                                <div class="card card-blog card-plain shadow-lg">
                                    <div class="">
                                        <a class="d-block shadow-xl border-radius-xl">
                                            <img src="~/images/product-images/@product.PhotoURL.Split("|")[0]" alt="img-blur-shadow"
                                                 class="w-100 img-cover shadow border-radius-xl" style="height:300px;">
                                        </a>
                                    </div>
                                    <div class="card-body p-3">
                                        <div class="row mb-2">
                                            <div class="col-6 text-gradient text-dark text-sm">
                                                @product.Address
                                                <span class="fa fa-map-marker"></span>
                                            </div>
                                            <div class="col-6 text-gradient text-dark text-end">
                                                <span class="fa @product.CategoryFontAwesomeIconName"></span>
                                                @product.CategoryName
                                            </div>
                                        </div>
                                        <p>
                                            <h5>@product.Name</h5>
                                        </p>
                                        <p class="mb-4 text-sm">@product.Details</p>
                                        <div class="d-flex align-items-center justify-content-between">
                                            <a asp-route-id="@product.Id" asp-action="Details" asp-controller="Product" class="btn btn-outline-primary btn-sm mb-0">View Project</a>
                                            <div class="avatar-group mt-2">
                                                <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Elena Morison">
                                                    <img alt="Image placeholder" src="../assets/img/team-1.jpg">
                                                </a>
                                                <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ryan Milly">
                                                    <img alt="Image placeholder" src="../assets/img/team-2.jpg">
                                                </a>
                                                <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Nick Daniel">
                                                    <img alt="Image placeholder" src="../assets/img/team-3.jpg">
                                                </a>
                                                <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Peterson">
                                                    <img alt="Image placeholder" src="../assets/img/team-4.jpg">
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Products End -->
    </div>
</div>